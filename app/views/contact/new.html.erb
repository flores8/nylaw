       <li><span class="phone icon black"></span><p>F: (702) 641-6002</p></li>
       <li><span class="e-mail icon black"></span><p>admin@noblesyanezlaw.com</p></li>
       <li><span class="globe icon black"></span><p><%= link_to "www.noblesyanezlaw.com", root_path %></p></li>
     </ul>
    
    <div class="clearfix"></div>
   
    <!-- Contact Details -->
   <h2 class="title bottom-2">Social Contacts<span class="line"></span></h2>
   
    <ul class="followers">
      <li>
        <%= link_to image_tag("facebook-social.png"), "https://www.facebook.com/NoblesYanezLaw" %>
